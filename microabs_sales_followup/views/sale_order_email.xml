<odoo>

     <record id="payment_followup_res_partner" model="ir.ui.view">
            <field name="name">res.partner.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='email_details']" position="inside">
                        <group string="Sales Email Details">
                            <group>
                                <field name="so_email_to_ids" widget="many2many_tags"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                                <field name="so_email_cc_ids" widget="many2many_tags"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                            </group>
                            <group>
                                <field name="so_email_to" readonly="1" force_save="1"/>
                                <field name="so_email_cc" readonly="1" force_save="1" />
                            </group>
                        </group>
                </xpath>
            </field>
        </record>
     <!-- sale.order view Inherit-->
    <record id="sale_order_template_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_quotation_send" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="action_quotation_send" position="after">
                <button name="%(action_sale_followup_mail)d" string="Send Email" type="action" class="oe_highlight" groups="base.group_user"/>
            </button>
        </field>
    </record>
</odoo>