<odoo>

    <!--  Payment Followup Tree View  -->
    <record id="payment_followup_tree_view" model="ir.ui.view">
        <field name="name">payment.followup.tree</field>
        <field name="model">payment.followup</field>
        <field name="arch" type="xml">
            <tree decoration-danger="due_status == 'overdue'" decoration-warning="due_status == 'pending'"
                  decoration-success="due_status == 'paid'">
                <field name="invoice_id"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="due_date"/>
                <field name="total_amount" widget="monetary"/>
                <field name="due_amount" widget="monetary"/>
                <field name="state"/>
                <field name="due_status"/>
            </tree>
        </field>
    </record>

    <!--  Payment Followup Form View  -->
    <record id="payment_followup_form_view" model="ir.ui.view">
        <field name="name">payment.followup.form</field>
        <field name="model">payment.followup</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="email_to"/>
                    </group>
                    <group>
                        <field name="email_cc"/>
                    </group>
                    <group>
                        <field name="email_subject"/>
                    </group>
                    <separator/>
                    <group>
                        <field name="email_body" nolabel="1" style="border:none;" options="{'style-inline': true}"/>
                    </group>
                    <group>
                        <field name="invoice_id" readonly="1" force_save="1" invisible="1"/>
                        <field name="invoice_date" readonly="1" force_save="1" invisible="1"/>
                        <field name="total_amount" readonly="1" force_save="1" widget="monetary" invisible="1"/>
                        <field name="company_id" readonly="1" invisible="1"/>
                        <field name="partner_id" readonly="1" force_save="1" invisible="1"/>
                        <field name="due_date" readonly="1" force_save="1" invisible="1"/>
                        <field name="due_amount" readonly="1" force_save="1" widget="monetary" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="due_status" invisible="1"/>
                         <field name="state" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="send_email" string="Send Email" type="object" states="draft" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" type="object" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--  Payment Followup Action  -->
    <record id="action_payment_followup" model="ir.actions.act_window">
        <field name="name">Payment Follow-up</field>
        <field name="res_model">payment.followup</field>
        <field name="view_mode">tree,form</field>
    </record>

