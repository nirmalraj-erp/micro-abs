<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="db_backup" inherit_id="web.login_layout" name="DB Backup">
        <xpath expr="//div/div/div[hasclass('card-body')]" position="inside">
            <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
                <t t-if="not disable_database_manager">
                    <a class="pr-2 mr-1" href="/web/database/dbbackup">Backup / Restore Databases</a>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[2]" position="replace">
    	<div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
            <a href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Odoo</span></a>
        </div>
    </xpath>
    </template>
</odoo>
