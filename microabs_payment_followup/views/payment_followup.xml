<odoo>

    <!--  Payment Followup Tree View  -->
    <record id="payment_followup_tree_view" model="ir.ui.view">
        <field name="name">payment.followup.tree</field>
        <field name="model">payment.followup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="invoice_id"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="due_date"/>
                <field name="total_amount" widget="monetary"/>
                <field name="due_amount" widget="monetary"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--  Payment Followup Form View  -->
    <record id="payment_followup_form_view" model="ir.ui.view">
        <field name="name">payment.followup.form</field>
        <field name="model">payment.followup</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="send_email" string="Send Email" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                </header>
                <sheet>
                    <group string="Invoice Details">
                        <group>
                            <field name="invoice_id" readonly="1" force_save="1"/>
                            <field name="invoice_date" readonly="1" force_save="1"/>
                            <field name="total_amount" readonly="1" force_save="1" widget="monetary"/>
                        </group>
                        <group>
                            <field name="partner_id" readonly="1" force_save="1"/>
                            <field name="due_date" readonly="1" force_save="1"/>
                            <field name="due_amount" readonly="1" force_save="1" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <separator/>
                    <group string="Email Recipients">
                        <group>
                            <field name="email_to" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="email_cc" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="email_subject" readonly="1" force_save="1"/>
                    </group>
                    <separator/>
                    <group string="Message">
                        <field name="email_body" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--  Payment Followup Action  -->
    <record id="action_payment_followup" model="ir.actions.act_window">
        <field name="name">Payment Followup</field>
        <field name="res_model">payment.followup</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--  Payment Followup Menu -->
    <menuitem
            id="menu_payment_followup"
            name="Payment Followup"
            parent="account.menu_finance_receivables"
            action="action_payment_followup"
            sequence="200"/>

    <!--Cron job for creating payment followup records-->
    <record id="payment_followup_job" model="ir.cron">
        <field name="name">Payment Followup Creation</field>
        <field name="model_id" ref="model_payment_followup"/>
        <field name="state">code</field>
        <field name="code">model.create_payment_followup()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
    </record>

</odoo>