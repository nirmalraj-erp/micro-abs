<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Sale Followup Form View  -->
    <record id="sale_followup_form_view" model="ir.ui.view">
        <field name="name">sale.followup.form</field>
        <field name="model">sale.followup</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="email_from" invisible="1"/>
                    </group>
                    <group>
                        <field name="email_to"/>
                    </group>
                    <group>
                        <field name="email_cc"/>
                    </group>
                    <group>
                        <field name="reply_to"/>
                    </group>
                    <group>
                        <field name="email_subject"/>
                    </group>
                    <separator/>
                    <group>
                        <field name="email_body" nolabel="1" style="border:none;" options="{'style-inline': true}"/>
                    </group>
                    <group>
                        <field name="email_attachment_ids" widget="many2many_binary"/>
                        <field name="sale_id" readonly="1" force_save="1" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="send_email" string="Send Email" type="object" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" type="object" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--  Sale Followup Action  -->
    <record id="action_sale_followup" model="ir.actions.act_window">
        <field name="name">Sales Follow-up</field>
        <field name="res_model">sale.followup</field>
        <field name="view_mode">form</field>
    </record>

    <act_window
        id="action_sale_followup_mail"
        name="Send Email"
        res_model="sale.followup"
        src_model="sale.order"
        view_mode="form"
        multi="True"
        target="new"
        key2="client_action_multi"
    />
</odoo>
