<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id ="sale_commission_payment_form" model="ir.ui.view">
		<field name ="name">sale.commission.payment.form</field>
		<field name ="model">sale.commission.payment</field>
		<field name ="arch" type="xml">
            <form string="Sale Commission Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="journal_id" required="1"
                                   widget="selection"
                                   domain="[('type', 'in', ('bank', 'cash'))]"/>
                        </group>
                        <group>
                            <field name="amount" required="1"/>
                            <field name="payment_date" required="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="validate_payment" string="Validate" type="object" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_commission_payment" model="ir.actions.act_window">
        <field name="name">Sale Commission Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.commission.payment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="commission_payment_history_tree_view_id" model="ir.ui.view">
        <field name="name">commission.payment.history.tree</field>
        <field name="model">commission.payment.history</field>
        <field name="arch" type="xml">
            <tree string="Commission Payment History" default_order="id desc" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="payment_date"/>
                <field name="company_id"/>
                <field name="amount" widget="monetary"/>
                <field name="total_commission" widget="monetary"/>
                <field name="commission_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_commission_payment_history" model="ir.actions.act_window">
        <field name="name">Sale Commission Payment History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">commission.payment.history</field>
        <field name="view_mode">tree</field>
    </record>

	<record id="sale_commission_report_tree_view_id" model="ir.ui.view">
        <field name="name">commission.master.tree.view</field>
        <field name="model">sale.commission.report</field>
        <field name="arch" type="xml">
            <tree string="Commission Master" delete='false' default_order="id desc" decoration-success="state=='paid'"
                  decoration-info="state=='done'" decoration-muted="state=='revert'">
                <field name="name" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                <field name="create_date" string="Date" widget="date"/>
                <field name="period"/>
                <field name="bank_name_id"/>
                <field name="company_id"/>
                <field name="total_invoice" widget="monetary"/>
                <field name="total_commission" widget="monetary"/>
                <field name="total_due" widget="monetary"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

	<record id ="commission_sale_report_form" model="ir.ui.view">
		<field name ="name">commission.sale.report.form</field>
		<field name ="model">sale.commission.report</field>
		<field name ="arch" type="xml">
			<form delete="false">
                <header>
                    <button string="Done" name="action_done" states="draft" type='object' class="oe_highlight"/>
                    <button string="Register Payment" name="%(microabs_sale_commission.action_sale_commission_payment)d"
                            type="action"
                            attrs="{'invisible': ['|', ('total_due', '=', 0), ('state', '=', 'draft')]}"
                            class="oe_highlight"/>
                    <button string="Revert" name="action_revert" states="draft,done" type='object' />
                    <field name="state" widget="statusbar" statusbar_visible="done,draft,revert"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_account_payment" type="object"
                                class="oe_stat_button" icon="fa-money"
                                attrs="{'invisible': [('commission_count', '=', 0)]}">
                                <field name="commission_count" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <label for="name" string="Draft Commission" attrs="{'invisible': ['|',('state','not in',('draft',))]}"/>
                            <field name="name" readonly="1" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                    <group>
                        <field name="period"/>
<!--                        <field name="check"/>-->
                        <field name="bank_name_id"/>
                    </group>
                    <group>
                        <field name="company_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                        <field name="create_date" string="Date" readonly="1" force_save="1" widget="date"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group string="Beneficiary Bank Details">
                        <field name="company_name"/>
                        <field name="company_address"/>
                        <field name="bb_contact"/>
                        <field name="bank_address"/>
                        <field name="bank_acc_no"/>
                        <field name="swift_code"/>
                    </group>
                        <group string="Intermediary Bank Details">
                        <field name="int_contact"/>
                        <field name="int_bank_acc_no"/>
                        <field name="int_bank_address"/>
                        <field name="int_swift_code"/>
                        <field name="int_iban_no"/>
                    </group>
                        <field name="commission_line" attrs="{'readonly': [('state', '=', 'paid')]}">
                            <tree string="Commission Line" delete="false" editable="false">
                                <field name="sequence" widget="handle"/>
                                <field name="sale_commission_id" invisible="1"/>
                                <field name="invoice_no"/>
                                <field name="invoice_date"/>
                                <field name="customer_id"/>
                                <field name="invoice_amount"/>
                                <field name="actual_received"/>
                                <field name="commission_amount"/>
                                <field name="commission_percentage"/>
                                <field name="currency_id"/>
                                <field name="company_id"/>
                            </tree>
                            </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_invoice" widget="monetary"/>
                            <field name="total_commission" widget="monetary"/>
                            <field name="total_due" readonly="1" force_save="1" widget="monetary"/>
                        </group>
                    </group>
                </sheet>
			</form>
		</field>
	</record>
	
	 <record id="action_sale_commission_report" model="ir.actions.act_window">
        <field name="name">Sale Commission Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.commission.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="sale_commission_report_tree_view_id"/>
    </record>

	<menuitem id="menu_sale_commission_report"
		name="Commission Invoice"
		action="action_sale_commission_report"
		parent="menu_sale_commission"
		sequence="4"/>

    <!--Bank Name Tree View-->
        <record id="bank_name_tree_view_id" model="ir.ui.view">
            <field name="name">bank.name.tree.view</field>
            <field name="model">bank.name</field>
            <field name="arch" type="xml">
                <tree string="Bank Name">
                    <field name="name"/>
                    <field name="bank_acc_no"/>
                    <field name="bank_address"/>
                    <field name="swift_code"/>
                    <field name="contact"/>
                </tree>
            </field>
        </record>

    <record id ="bank_name_form_view_id" model="ir.ui.view">
		<field name ="name">bank.name.form.view</field>
		<field name ="model">bank.name</field>
		<field name ="arch" type="xml">
			<form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Beneficiary Bank Details">
                            <field name="company_name"/>
                            <field name="company_address"/>
                            <field name="contact"/>
                            <field name="bank_address"/>
                            <field name="bank_acc_no"/>
                            <field name="swift_code"/>
                        </group>
                        <group string="Intermediary Bank Details">
                            <field name="int_contact"/>
                            <field name="int_bank_acc_no"/>
                            <field name="int_bank_address"/>
                            <field name="int_swift_code"/>
                            <field name="int_iban_no"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <!--Bank Name  Action-->
    <record id="action_menu_bank_name_id" model="ir.actions.act_window">
        <field name="name">Bank Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bank.name</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="bank_name_tree_view_id"/>
    </record>

        <!--Bank Name  View-->
        <menuitem id="menu_doc_address"
              name="Beneficiary/Intermediary Bank Details"
              action="action_menu_bank_name_id"
              parent="menu_sale_commission"
              sequence="12"/>

        <!-- Commission Payment History -->
        <menuitem id="menu_commission_payment_history"
              name="Commission Payment History"
              action="action_commission_payment_history"
              parent="menu_sale_commission"
              sequence="15"/>

</odoo>
