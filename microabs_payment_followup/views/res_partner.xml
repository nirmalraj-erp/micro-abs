<odoo>
     <record id="payment_followup_res_partner" model="ir.ui.view">
            <field name="name">res.partner.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="Payment Follow-Ups" autofocus="autofocus" name="email_details">
                        <group string="Payment Follow-Ups Details">
                            <group>
                                <field name="docs_to_ids" widget="many2many_tags"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                                <field name="docs_cc_ids" widget="many2many_tags"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                                <field name="payment_to_ids" widget="many2many_tags"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                                <field name="payment_cc_ids" widget="many2many_tags"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                                <field name="official_contact_id"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                                <field name="official_contact_two_id"
                                       domain="[('id', 'in', child_ids)]"
                                       options="{'no_open':True,'no_create': True}"/>
                            </group>
                            <group>
                                <field name="docs_to" readonly="1" force_save="1"/>
                                <field name="docs_cc" readonly="1" force_save="1" />
                                <field name="payment_to" readonly="1" force_save="1"/>
                                <field name="payment_cc" readonly="1" force_save="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
            </field>
        </record>

    <record model="ir.actions.act_window" id="sms.send_sms_action">
        <field name="groups_id" eval="[(4,ref('base.group_private_addresses'))]" />
    </record>
</odoo>